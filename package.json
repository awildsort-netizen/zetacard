{
  "name": "zetacard",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:failed": "vitest run --reporter=verbose 2>&1 | grep -E '^\\s*(✕|×|●)'",
    "test:e2e": "playwright test --workers=1 --retries=0 --max-failures=1",
    "test:e2e:debug": "playwright test --workers=1 --retries=0 --max-failures=1 --reporter=line 2>&1 | Tee-Object -FilePath test-output.txt",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "three": "^0.182.0"
  },
  "optionalDependencies": {
    "isomorphic-git": "^1.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "18.2.28",
    "@types/react-dom": "18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "4.0.0",
    "eslint": "^8.50.0",
    "jsdom": "^27.3.0",
    "typescript": "5.2.2",
    "vite": "^4.4.9",
    "vitest": "^1.3.0"
  },
  "vitest": {
    "environment": "jsdom"
  }
}
